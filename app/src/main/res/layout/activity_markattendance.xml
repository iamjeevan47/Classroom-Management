<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".markattendance">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/markattend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Mark Attendance"/>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/lecture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:text="Lecture"
        android:textSize="20dp"
        android:textColor="#000"/>
    <Spinner
        android:id="@+id/lecturespinner"
        android:layout_width="137dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/lecture"
        android:background="@drawable/spinnerbg"
        android:entries="@array/Lectures"/>
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:text="Date"
        android:textSize="20dp"
        android:textColor="#000"/>
    <TextView
        android:id="@+id/currentdate"
        android:layout_width="137dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:text="Date Display"
        android:textColor="#000"
        android:textSize="15dp"
        android:gravity="center"
        android:background="@drawable/spinnerbg"
        android:layout_below="@id/date"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/r1"
        android:layout_above="@id/r2"
        android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/markattendance"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingVertical="7dp"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/submit"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Submit"
            android:layout_centerHorizontal="true"
           android:background="@drawable/buttonround"/>
    </RelativeLayout>
</RelativeLayout>
