<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addteacher"
    android:background="@color/black">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/ttoolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Add Teacher"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="20dp"
        app:cardElevation="15dp"
        app:cardPreventCornerOverlap="false">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/skyblue">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/teaacherdesig"
                android:layout_width="250dp"
                android:layout_height="54dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:hint="Designation"
                app:met_textColorHint="#616161"
                android:inputType="text"
                app:met_primaryColor="#000"
                app:met_floatingLabel="highlight"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/teaachersubject"
                android:layout_width="250dp"
                android:layout_height="54dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Subject"
                app:met_textColorHint="#616161"
                android:inputType="text"
                app:met_primaryColor="#000"
                app:met_floatingLabel="highlight"
                android:layout_below="@id/teaacherdesig"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/teaachername"
                android:layout_width="250dp"
                android:layout_height="54dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Name"
                app:met_textColorHint="#616161"
                android:inputType="textPersonName"
                app:met_primaryColor="#000"
                app:met_floatingLabel="highlight"
                android:layout_below="@id/teaachersubject"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/teacheremail"
                android:layout_width="250dp"
                android:layout_height="54dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Email"
                app:met_textColorHint="#616161"
                android:inputType="textEmailAddress"
                app:met_primaryColor="#000"
                app:met_floatingLabel="highlight"
                android:layout_below="@id/teaachername"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/teacherphone"
                android:layout_width="250dp"
                android:layout_height="54dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Phone"
                app:met_textColorHint="#616161"
                android:inputType="phone"
                app:met_primaryColor="#000"
                app:met_floatingLabel="highlight"
                android:layout_below="@id/teacheremail"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/teacherusername"
                android:layout_width="250dp"
                android:layout_height="54dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Username"
                app:met_textColorHint="#616161"
                android:inputType="textVisiblePassword|textNoSuggestions"
                app:met_primaryColor="#000"
                app:met_floatingLabel="highlight"
                android:layout_below="@id/teacherphone"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/teacherpassword"
                android:layout_width="250dp"
                android:layout_height="54dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Password"
                app:met_textColorHint="#616161"
                android:inputType="textPassword"
                app:met_primaryColor="#000"
                app:met_floatingLabel="highlight"
                android:layout_below="@id/teacherusername"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/teachercpassword"
                android:layout_width="250dp"
                android:layout_height="54dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Confirm Password"
                app:met_textColorHint="#616161"
                android:inputType="textPassword"
                app:met_primaryColor="#000"
                app:met_floatingLabel="highlight"
                android:layout_below="@id/teacherpassword"
                android:layout_marginBottom="5dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/add"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Add Teacher"
        android:background="@drawable/buttonround"/>
</RelativeLayout>